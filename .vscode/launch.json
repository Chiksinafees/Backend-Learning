    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**" 
            ],
            "program": "${workspaceFolder}\\app.js",
            "restart": true,
            "runtimeExecutable": "nodemon", // restart debugger and server too when changes occur
            "console": "integratedTerminal"  // (npm install nodemon -g ) now if we run nodemon in terminal it will not fail
        }
    ]
}